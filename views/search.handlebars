<h1 class="text-2xl font-bold flex justify-center">Find The Perfect Game For You!</h1>
  <div class="flex w-full justify-center my-10">
    <form action="#" class="flex justify-center h-10 w-screen">
      <label for="search" class="mr-5 font-bold">Search:</label>
      <select id="firstSelect" class="rounded-xl mr-5">
        <option value="" disabled selected>Select A Category</option>
        <option value="genre">Genre</option>
        <option value="platform">Platform</option>
        <option value="decadeCreated">Decade Created</option>
        <option value="rating">Rating</option>
      </select>
      <select id="secondSelect" class="rounded-xl mr-5 hidden">
        <!-- Options will be dynamically added here through js -->
      </select>
      <input type="submit" value="Submit" class="bg-gray-700 hover:bg-black text-white font-bold py-2 px-4 border-b-4 border-blue-700 hover:border-pink-500 rounded"/>
    </form>
  </div>